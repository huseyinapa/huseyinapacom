events {
    worker_connections 1024;
}

http {
    server {
        listen 80;
        server_name huseyinapa.com www.huseyinapa.com;

        location / {
            proxy_pass http://huseyinapa_web:3202;
        }
    }
    server {
       listen 443 ssl;
       server_name huseyinapa.com  www.huseyinapa.com;

       ssl_certificate /etc/nginx/ssl/huseyinapa/server.crt;
       ssl_certificate_key /etc/nginx/ssl/huseyinapa/server.key;

       ssl_protocols TLSv1.2 TLSv1.3;
       ssl_ciphers HIGH:!aNULL:!MD5;

       location / {
           proxy_pass http://service:3202;  # Docker'daki backend servisine y√∂nlendir
       }
    }

}