datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Service {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  url       String
  statusApi String?
  category  String
  logs      ServiceLog[]
}

model ServiceLog {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  status    String
  duration  String?
  issue     String?
  service   Service  @relation(fields: [serviceId], references: [id])
  serviceId Int
}
